---
import {SiVuetify } from "react-icons/si";
import IconHtml from "../assets/icons/IconHtml.astro";
import Programador from "../assets/img/Programador.gif";
import {Image} from "astro:assets";
import IconCss from "../assets/icons/IconCss.astro";
import IconJavaScript from "../assets/icons/IconJavaScript.astro";
import IconGithub from "../assets/icons/IconGithub.astro";
import IconVue from "../assets/icons/IconVue.astro";
import IconReact from "../assets/icons/IconReact.astro";
import IconPhp from "../assets/icons/IconPhp.astro";
import IconDatabase from "../assets/icons/IconDatabase.astro";
import IconSymfony from "../assets/icons/IconSymfony.astro";
import Info from "./Info.astro";
---
<section
      class="max-container padding-container text-left py-16 md:py-24 relative flex-col flex justify-center items-center"
      id="experiencia"
    >
    <h2 class="my-10 fade-down">Experiencia</h2>
    <div class="grid md:grid-cols-2 grid-cols-1 gap-3 w-full">
    <ol class="relative flex-col justify-between h-full border-s border-gray-200 dark:border-gray-700">
        <Info job="PROGRAMADOR WEB" institution="Ministerio de Relaciones Exteriores"
        time="2024-Actualidad"
        description={`Encargado de la creación de aplicaciones web escalables y de alto
        rendimiento utilizando tecnologías frontend como son Vue.js y
        Vuetify. Especializado en el desarrollo de interfaces de usuario
        intuitivas y responsivas para diversos servicios empresariales.`}
        >
        <IconHtml class="text-orange-500 hover:scale-110 transition-all  duration-200 size-10 animate-duration-[300ms] fade-right"/>
        <IconCss class="text-blue-500 hover:scale-110 transition-all duration-200 size-10 animate-duration-[350ms] fade-right"/>
        <IconJavaScript class="text-yellow-500 hover:scale-110 transition-all duration-200 size-10 animate-duration-[400ms] fade-right"/>
        <IconGithub class="text-white hover:scale-110 transition-all duration-200 size-10 animate-duration-[450ms] fade-right"/>
        <IconVue class=" text-green-500  hover:scale-110 transition-all duration-200 size-10 animate-duration-[500ms] fade-right"/>
        <SiVuetify className="text-blue-500 hover:scale-110 transition-all duration-200 size-10 animate-duration-[550ms] fade-right" client:visible/>
        </Info>

        <Info job="PRACTICANTE DE DESARROLLO" institution="Universidad de Ciencias Informática" time="2021 -2023"
        description={`En el centro SeoWebMas asociado a la universidad, me especialice en
        la implementación de vistas, clases y funcionalidades en bases de
        datos. Durante ese periodo desarrolle una herramienta de búsqueda
        que mejoro los productos recomendados a los clientes mejorando así
        su experiencia.`}>
        <IconHtml class="text-orange-500 hover:scale-110 transition-all  duration-200 size-10 fade-right animate-duration-[300ms]"></IconHtml>
        <IconCss class="text-blue-500 hover:scale-110 transition-all duration-200 size-10 fade-right animate-duration-[350ms]"></IconCss>
        <IconJavaScript class="text-yellow-500 hover:scale-110 transition-all duration-200 size-10 fade-right animate-duration-[400ms]"></IconJavaScript>
        <IconReact class="text-blue-600 hover:scale-110 transition-all duration-200 size-10 fade-right animate-duration-[450ms]"></IconReact>
        <IconGithub class="text-white hover:scale-110 transition-all duration-200 size-10 fade-right animate-duration-[500ms]"></IconGithub>
        <IconPhp class="text-gray-300 hover:scale-110 transition-all duration-200 size-10 fade-right animate-duration-[550ms]"></IconPhp>
        <IconSymfony class="text-gray-300 hover:scale-110 transition-all duration-200 size-10 fade-right animate-duration-[600ms]"/>
        <IconDatabase class="text-blue-700 hover:scale-110 transition-all duration-200 size-10 fade-right animate-duration-[650ms]"></IconDatabase>
        </Info>
    </ol>
    <div class="relative group z-10 fade-left">
      <div class="absolute -inset-1 place-items-center  w-full bg-gradient-to-r from-purple-100 to-orange-500 rounded-lg backdrop-blur-lg blur opacity-25 group-hover:opacity-100 transition-all duration-200"></div>
      <div class="relative p-4 h-full bg-white bg-opacity-25 backdrop-blur-lg rounded-lg">
        <Image
          class="h-full rounded-lg w-full"
          src={Programador}
          alt="foto de proyecto"
        ></Image>
      </div>
    </div>
    </div>
</section>
