---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar/Navbar.tsx';
import Experiencia from '../components/Experiencia.astro';
import Hero from '../components/HeroSection/Hero.astro';
import Proyectos from '../components/Proyectos.tsx';
import Contacto from '../components/Contacto.tsx';
import Footer from '../components/Footer.astro';
import Titulos from '../components/Titulos.astro';
---

<Layout title="Portfolio-Fullstack">
    <div class="fixed left-0 top-0 -z-10 h-full w-full">
        <div class="absolute h-full w-full bg-black">
            <div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"></div>
            <div class="absolute left-0 right-0 top-[-10%] h-[1000px] w-[1000px] rounded-full bg-[radial-gradient(circle_400px_at_50%_300px,#fbfbfb36,#000)]"></div>
        </div>
    </div>
    <Navbar client:visible/>
    <main class="mx-auto w-full">
        <Hero/>
        <Experiencia />
        <Proyectos client:visible/>
        <Titulos/>
    </main>
    <Contacto client:visible/>
    <Footer/>
</Layout>

<script>
import { inView } from "motion";

inView('.fade-up',((element)=>{
  element.target.classList.add("animate-fade-up")
}))
inView('.fade-right',((element)=>{
  element.target.classList.add("animate-fade-right")
}))
inView('.fade-left',((element)=>{
  element.target.classList.add("animate-fade-left")
}))
inView('.fade-down',((element)=>{
  element.target.classList.add("animate-fade-down")
}))
</script>
